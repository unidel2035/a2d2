<!-- Dashboard Header -->
<div class="mb-6">
  <h1 class="text-3xl font-bold mb-2">Dashboard</h1>
  <p class="text-base-content/70">Welcome to DronDoc 2025 - Your Drone Fleet Management System</p>
</div>

<!-- Quick Actions -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
  <a href="#" class="btn btn-primary btn-lg justify-start gap-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
    </svg>
    New Flight
  </a>
  <a href="#" class="btn btn-secondary btn-lg justify-start gap-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
    </svg>
    New Inspection
  </a>
  <a href="#" class="btn btn-accent btn-lg justify-start gap-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
    Add Drone
  </a>
  <a href="#" class="btn btn-info btn-lg justify-start gap-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    Generate Report
  </a>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
  <!-- Total Drones -->
  <div class="stats shadow">
    <div class="stat">
      <div class="stat-figure text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
        </svg>
      </div>
      <div class="stat-title">Total Drones</div>
      <div class="stat-value text-primary">24</div>
      <div class="stat-desc">↗︎ 12% from last month</div>
    </div>
  </div>

  <!-- Active Flights -->
  <div class="stats shadow">
    <div class="stat">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
        </svg>
      </div>
      <div class="stat-title">Active Flights</div>
      <div class="stat-value text-secondary">156</div>
      <div class="stat-desc">↗︎ 23% from last week</div>
    </div>
  </div>

  <!-- Maintenance -->
  <div class="stats shadow">
    <div class="stat">
      <div class="stat-figure text-error">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div class="stat-title">Needs Maintenance</div>
      <div class="stat-value text-error">3</div>
      <div class="stat-desc">2 drones require immediate attention</div>
    </div>
  </div>

  <!-- Operators -->
  <div class="stats shadow">
    <div class="stat">
      <div class="stat-figure text-info">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      <div class="stat-title">Active Operators</div>
      <div class="stat-value text-info">18</div>
      <div class="stat-desc">↗︎ 3 new this month</div>
    </div>
  </div>
</div>

<!-- Charts Row -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
  <!-- Flight Statistics Chart -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="flex justify-between items-center mb-4">
        <h2 class="card-title">Flight Statistics</h2>
        <div class="join">
          <button class="btn btn-sm join-item btn-active">Week</button>
          <button class="btn btn-sm join-item">Month</button>
          <button class="btn btn-sm join-item">Year</button>
        </div>
      </div>
      <div class="bg-base-200 rounded-lg p-8 flex items-center justify-center h-64">
        <div class="text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <p class="text-base-content/50">Chart visualization will be displayed here</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Drone Usage Chart -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="flex justify-between items-center mb-4">
        <h2 class="card-title">Drone Usage</h2>
        <div class="join">
          <button class="btn btn-sm join-item btn-active">All</button>
          <button class="btn btn-sm join-item">Active</button>
        </div>
      </div>
      <div class="bg-base-200 rounded-lg p-8 flex items-center justify-center h-64">
        <div class="text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
          </svg>
          <p class="text-base-content/50">Analytics loading...</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity -->
<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="flex justify-between items-center mb-4">
      <h2 class="card-title">Recent Activity</h2>
      <a href="#" class="link link-primary">View All</a>
    </div>

    <div class="space-y-3">
      <!-- Activity Item 1 -->
      <div class="flex items-start gap-4 p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
        <div class="avatar placeholder">
          <div class="bg-success text-success-content rounded-full w-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold">Flight Completed</h3>
          <p class="text-sm text-base-content/70">DJI Mavic 3 completed inspection on Line #4523</p>
          <p class="text-xs text-base-content/50 mt-1">5 minutes ago</p>
        </div>
      </div>

      <!-- Activity Item 2 -->
      <div class="flex items-start gap-4 p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
        <div class="avatar placeholder">
          <div class="bg-info text-info-content rounded-full w-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold">New Inspection</h3>
          <p class="text-sm text-base-content/70">45 photos uploaded with GPS tags</p>
          <p class="text-xs text-base-content/50 mt-1">15 minutes ago</p>
        </div>
      </div>

      <!-- Activity Item 3 -->
      <div class="flex items-start gap-4 p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
        <div class="avatar placeholder">
          <div class="bg-warning text-warning-content rounded-full w-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold">Maintenance Scheduled</h3>
          <p class="text-sm text-base-content/70">Phantom 4 RTK requires service in 3 days</p>
          <p class="text-xs text-base-content/50 mt-1">1 hour ago</p>
        </div>
      </div>

      <!-- Activity Item 4 -->
      <div class="flex items-start gap-4 p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
        <div class="avatar placeholder">
          <div class="bg-primary text-primary-content rounded-full w-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold">Operator Added</h3>
          <p class="text-sm text-base-content/70">Ivanov A.S. granted access to the system</p>
          <p class="text-xs text-base-content/50 mt-1">2 hours ago</p>
        </div>
      </div>

      <!-- Activity Item 5 -->
      <div class="flex items-start gap-4 p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
        <div class="avatar placeholder">
          <div class="bg-accent text-accent-content rounded-full w-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
        </div>
        <div class="flex-1">
          <h3 class="font-semibold">Report Generated</h3>
          <p class="text-sm text-base-content/70">Monthly flight report is ready for download</p>
          <p class="text-xs text-base-content/50 mt-1">3 hours ago</p>
        </div>
      </div>
    </div>
  </div>
</div>

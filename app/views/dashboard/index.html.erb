  }

  .activity-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.4rem;
    flex-shrink: 0;
    position: relative;
  }

  .activity-icon::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    padding: 1px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .activity-icon.blue {
    background: rgba(59, 130, 246, 0.1);
  }

  .activity-icon.green {
    background: rgba(16, 185, 129, 0.1);
  }

  .activity-icon.orange {
    background: rgba(245, 158, 11, 0.1);
  }

  .activity-content {
    flex: 1;
  }

  .activity-title {
    font-weight: 600;
    color: var(--text);
    margin-bottom: 4px;
    font-size: 0.95rem;
  }

  .activity-description {
    font-size: 0.88rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .activity-time {
    font-size: 0.8rem;
    color: var(--text-muted);
    white-space: nowrap;
    align-self: flex-start;
  }

  @media (max-width: 768px) {
    .stats-grid,
    .quick-actions {
      grid-template-columns: 1fr;
    }

    .charts-grid {

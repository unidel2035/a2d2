<style>
  /* Terminal Dashboard Styles */
  .terminal-header {
    margin-bottom: 30px;
    border: 2px solid var(--terminal-green);
    padding: 20px;
    background: rgba(0, 255, 0, 0.05);
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
  }

  .terminal-header::before {
    content: '┌─ SYSTEM STATUS ─────────────────────────────────┐';
    display: block;
    margin-bottom: 10px;
    color: var(--terminal-green);
    font-size: 12px;
  }

  .terminal-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--terminal-green);
    text-shadow: 0 0 15px var(--terminal-green);
    letter-spacing: 4px;
    margin-bottom: 5px;
  }

  .terminal-title::before {
    content: '> ';
  }

  .terminal-subtitle {
    color: rgba(0, 255, 0, 0.7);
    font-size: 0.95rem;
  }

  /* Quick Actions */
  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 15px;
    margin-bottom: 30px;
  }

  .action-btn {
    background: rgba(0, 255, 0, 0.05);
    border: 2px solid var(--terminal-green);
    padding: 20px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s;
    text-decoration: none;
    color: var(--terminal-green);
    position: relative;
  }

  .action-btn::before {
    content: '[ ';
  }

  .action-btn::after {
    content: ' ]';
  }

  .action-btn:hover {
    background: var(--terminal-green);
    color: #000;
    box-shadow: 0 0 25px var(--terminal-green);
    transform: scale(1.05);
  }

  .action-text {
    font-weight: 700;
    font-size: 13px;
    letter-spacing: 2px;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .stat-card {
    background: rgba(0, 0, 0, 0.8);
    border: 2px solid var(--terminal-green);
    padding: 20px;
    transition: all 0.3s;
    box-shadow: 0 0 15px rgba(0, 255, 0, 0.2);
  }

  .stat-card:hover {
    box-shadow: 0 0 30px rgba(0, 255, 0, 0.5);
    transform: translateY(-3px);
  }

  .stat-card.danger {
    border-color: var(--danger-red);
    box-shadow: 0 0 15px rgba(255, 0, 0, 0.2);
  }

  .stat-card.danger:hover {
    box-shadow: 0 0 30px rgba(255, 0, 0, 0.5);
  }

  .stat-card.warning {
    border-color: var(--warning-yellow);
    box-shadow: 0 0 15px rgba(255, 255, 0, 0.2);
  }

  .stat-card.warning:hover {
    box-shadow: 0 0 30px rgba(255, 255, 0, 0.5);
  }

  .stat-card.cyan {
    border-color: var(--cyber-blue);
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
  }

  .stat-card.cyan:hover {
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
  }

  .stat-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px dashed rgba(0, 255, 0, 0.3);
  }

  .stat-title {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    text-shadow: 0 0 15px currentColor;
    margin-bottom: 10px;
  }

  .stat-change {
    font-size: 13px;
  }

  .stat-change.positive {
    color: var(--terminal-green);
  }

  .stat-change.negative {
    color: var(--danger-red);
  }

  /* Charts */
  .charts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .chart-card {
    background: rgba(0, 0, 0, 0.8);
    border: 2px solid var(--terminal-green);
    padding: 20px;
    box-shadow: 0 0 15px rgba(0, 255, 0, 0.2);
  }

  .chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 2px dashed rgba(0, 255, 0, 0.3);
  }

  .chart-title {
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 2px;
  }

  .chart-title::before {
    content: '[';
    margin-right: 5px;
  }

  .chart-title::after {
    content: ']';
    margin-left: 5px;
  }

  .chart-filter {
    display: flex;
    gap: 10px;
  }

  .filter-btn {
    padding: 6px 12px;
    border: 1px solid var(--terminal-green);
    background: rgba(0, 255, 0, 0.05);
    cursor: pointer;
    font-size: 11px;
    color: var(--terminal-green);
    font-family: 'Fira Code', monospace;
    transition: all 0.3s;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: var(--terminal-green);
    color: #000;
    box-shadow: 0 0 10px var(--terminal-green);
  }

  .chart-placeholder {
    height: 250px;
    background: rgba(0, 255, 0, 0.03);
    border: 2px dashed rgba(0, 255, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    letter-spacing: 2px;
  }

  /* Activity Feed */
  .activity-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .activity-item {
    display: flex;
    gap: 15px;
    padding: 15px;
    background: rgba(0, 255, 0, 0.03);
    border-left: 3px solid var(--terminal-green);
    transition: all 0.3s;
  }

  .activity-item:hover {
    background: rgba(0, 255, 0, 0.08);
    border-left-width: 5px;
    box-shadow: inset 0 0 20px rgba(0, 255, 0, 0.1);
  }

  .activity-icon {
    width: 40px;
    height: 40px;
    border: 2px solid var(--terminal-green);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .activity-icon.danger {
    border-color: var(--danger-red);
    color: var(--danger-red);
  }

  .activity-icon.warning {
    border-color: var(--warning-yellow);
    color: var(--warning-yellow);
  }

  .activity-icon.cyan {
    border-color: var(--cyber-blue);
    color: var(--cyber-blue);
  }

  .activity-content {
    flex: 1;
  }

  .activity-title {
    font-weight: 600;
    margin-bottom: 3px;
    font-size: 14px;
  }

  .activity-description {
    font-size: 12px;
    color: rgba(0, 255, 0, 0.7);
  }

  .activity-time {
    font-size: 11px;
    color: rgba(0, 255, 0, 0.5);
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .stats-grid,
    .quick-actions,
    .charts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>


      <!-- Color Palette -->
      <section class="mb-12">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title text-2xl mb-4">Цветовая палитра</h2>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="p-4 bg-primary text-primary-content rounded-lg text-center">
                <div class="font-bold">Primary</div>
              </div>
              <div class="p-4 bg-secondary text-secondary-content rounded-lg text-center">
                <div class="font-bold">Secondary</div>
              </div>
              <div class="p-4 bg-accent text-accent-content rounded-lg text-center">
                <div class="font-bold">Accent</div>
              </div>
              <div class="p-4 bg-neutral text-neutral-content rounded-lg text-center">
                <div class="font-bold">Neutral</div>
              </div>
              <div class="p-4 bg-info text-info-content rounded-lg text-center">
                <div class="font-bold">Info</div>
              </div>
              <div class="p-4 bg-success text-success-content rounded-lg text-center">
                <div class="font-bold">Success</div>
              </div>
              <div class="p-4 bg-warning text-warning-content rounded-lg text-center">
                <div class="font-bold">Warning</div>
              </div>
              <div class="p-4 bg-error text-error-content rounded-lg text-center">
                <div class="font-bold">Error</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Back to Home -->
      <div class="text-center">
        <%= link_to root_path, class: "btn btn-outline btn-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Вернуться на главную
        <% end %>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-200 text-base-content mt-12">
      <div>
        <p class="font-bold text-xl">
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">A2D2</span>
        </p>
        <p class="text-base-content/70">Компоненты дизайна на базе Tailwind CSS + DaisyUI</p>
      </div>
    </footer>
  </body>
</html>

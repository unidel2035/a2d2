<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to 'â† Back to Agents', agents_path, class: "text-blue-600 hover:text-blue-900" %>
  </div>

  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold"><%= @agent.name %></h1>
    </div>

    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Agent Type</h3>
          <p class="text-lg"><%= @agent.agent_type %></p>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Status</h3>
          <% status_class = case @agent.status
             when 'idle' then 'bg-green-100 text-green-800'
             when 'busy' then 'bg-yellow-100 text-yellow-800'
             when 'failed' then 'bg-red-100 text-red-800'
             else 'bg-gray-100 text-gray-800'
             end %>
          <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full <%= status_class %>">
            <%= @agent.status %>
          </span>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Health Score</h3>
          <div class="flex items-center">
            <div class="flex-1 h-4 bg-gray-200 rounded-full mr-3">
              <% score_class = @agent.health_score >= 70 ? 'bg-green-500' : (@agent.health_score >= 50 ? 'bg-yellow-500' : 'bg-red-500') %>
              <div class="h-4 rounded-full <%= score_class %>" style="width: <%= @agent.health_score %>%"></div>
            </div>
            <span class="text-lg font-semibold"><%= @agent.health_score.to_i %>%</span>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Last Heartbeat</h3>
          <p class="text-lg"><%= @agent.last_heartbeat ? time_ago_in_words(@agent.last_heartbeat) + ' ago' : 'Never' %></p>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Version</h3>
          <p class="text-lg"><%= @agent.version || 'N/A' %></p>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Endpoint</h3>
          <p class="text-lg font-mono text-sm"><%= @agent.endpoint || 'N/A' %></p>
        </div>

        <div class="md:col-span-2">
          <h3 class="text-sm font-medium text-gray-500 mb-2">Capabilities</h3>
          <% if @agent.capabilities.present? %>
            <div class="flex flex-wrap gap-2">
              <% @agent.capabilities.each do |cap| %>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-lg text-sm"><%= cap %></span>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-400">No capabilities defined</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @registry_entry %>
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold">Registry Information</h2>
    </div>

    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Registration Status</h3>
          <p class="text-lg"><%= @registry_entry.registration_status %></p>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Consecutive Failures</h3>
          <p class="text-lg"><%= @registry_entry.consecutive_failures %></p>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Last Health Check</h3>
          <p class="text-lg">
            <%= @registry_entry.last_health_check ? time_ago_in_words(@registry_entry.last_health_check) + ' ago' : 'Never' %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold">Recent Tasks</h2>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @tasks.each do |task| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-mono">#<%= task.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm"><%= task.task_type %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_class = case task.status
                   when 'completed' then 'bg-green-100 text-green-800'
                   when 'running' then 'bg-blue-100 text-blue-800'
                   when 'failed' then 'bg-red-100 text-red-800'
                   else 'bg-gray-100 text-gray-800'
                   end %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                  <%= task.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm"><%= task.priority %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(task.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= task.duration ? "#{task.duration.round(2)}s" : '-' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @tasks.empty? %>
        <div class="px-6 py-8 text-center text-gray-500">
          No tasks yet
        </div>
      <% end %>
    </div>
  </div>
</div>
